# Node Environment
NODE_ENV=development

# Server
PORT=3001

# Database
DATABASE_URL="postgresql://finplan:finplan_dev_password@localhost:5432/finplan_dev?schema=public"

# JWT Secrets (MUST CHANGE IN PRODUCTION!)
# SECURITY WARNING: Generate strong random secrets before deploying to production!
# Generate strong secrets with: openssl rand -base64 64
# The server will REJECT weak/example secrets in production mode
JWT_SECRET="REPLACE_WITH_RANDOM_STRING_FROM_OPENSSL_COMMAND_MIN_32_CHARS"
JWT_REFRESH_SECRET="REPLACE_WITH_DIFFERENT_RANDOM_STRING_FROM_OPENSSL_COMMAND"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# IMPORTANT: Never commit actual secrets to git!
# In production, use environment variables from secure secret management system

# Cookie Security (for httpOnly cookies)
# Generate with: openssl rand -base64 64
COOKIE_SECRET="REPLACE_WITH_RANDOM_STRING_MINIMUM_32_CHARS"

# CSRF Protection (for cookie-based auth)
# Generate with: openssl rand -base64 64
CSRF_SECRET="REPLACE_WITH_DIFFERENT_RANDOM_STRING_MINIMUM_32_CHARS"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Redis (Optional)
REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW="15m"
